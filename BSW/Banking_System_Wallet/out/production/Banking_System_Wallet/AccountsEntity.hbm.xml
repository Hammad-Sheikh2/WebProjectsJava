<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.sql.Modals.AccountsEntity" table="accounts" schema="banking_system_wallet">
        <id name="id">
            <column name="id" sql-type="int"/>
        </id>
        <property name="userId">
            <column name="user_id" sql-type="int"/>
        </property>
        <property name="currId">
            <column name="curr_id" sql-type="int"/>
        </property>
        <property name="balance">
            <column name="balance" sql-type="double" precision="-1"/>
        </property>
    </class>
</hibernate-mapping>